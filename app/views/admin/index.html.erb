

<div id="incomplete_invoices">
    <h2>Incomplete Invoices</h2>
    <% @incomplete_invoices.each do |invoice| %>
    <p><%= link_to "Invoice ##{invoice.id} - #{invoice.created_at.strftime("%A, %B %d, %Y")}", "/admin/invoices/#{invoice.id}" %></p>
  <% end %>
</div>

<% content_for :aside do%>
  <div id='top-customers' class='aside'>
    <table>
      <tr><th><h3>Top Customers</h3></th></tr>
      <%@top_5_customers.each_with_index do |customer, index|%>
      <tr><td id='transactions-<%="#{customer.id}"%>'> <%= "#{index+1}. #{customer.name} - #{customer.num_succesful_transactions} purchases" %> </td></tr>
      <%end%>
    </table>
  </div>
<%end%>